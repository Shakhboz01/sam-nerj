<div class="container my-5">
  <div class="card shadow-lg">
    <%= render 'filter_form', q: @q, url: request.path %>
    <div class="card-header d-flex justify-content-between align-items-center">
      <h3 class="card-title font-weight-bold">История пополнений</h3>
    </div>

    <div class="card-body">
      <%= render 'transaction_histories', transaction_histories: @transaction_histories %>
      <%= paginate @transaction_histories %>
      <table class='table-bordered'>
        <thead class='table-dark'>
          <tr>
            <th></th>
            <th>Итого цена</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <th>В долларах </th>
            <td><%= number_to_currency @transaction_histories.price_in_usd.sum(:price) %></td>
          </tr>
          <tr>
            <th>В сумах </th>
            <td><%= num_to_usd(@transaction_histories.price_in_uzs.sum(:price)) %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
