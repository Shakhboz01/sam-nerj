<div class="container my-5">
  <div class="card shadow-lg">
    <div class="card-header d-flex justify-content-between align-items-center">
      <h3 class="card-title font-weight-bold">Бригада сервисы</h3>
    </div>

    <div class="card-body">
      <%= render 'filter_form', q: @q, url: request.path %>
      <%= render 'team_services', team_services: @team_services %>
      <%= paginate @team_services %>
      <table class='table-bordered'>
        <thead class='table-dark'>
          <tr>
            <th>Итого цена</th>
            <th>Доля бригадеров</th>
            <th>Остаток</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= number_to_currency(@all_team_services.sum(:total_price)) %></td>
            <td><%= number_to_currency @all_team_services.sum(:team_portion) %></td>
            <td><%= @all_team_services.sum(:total_price) - @all_team_services.sum(:company_portion) %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
