<div class='col-sm-2'>
  <div style='height: 100vh; overflow: auto'>
    <%= clink_to 'Добавить категорию', new_product_category_path, 'bi-plus-lg' %>
    <br>
    <div style="border: 1px solid black;padding: 6px;background-color: rgb(204, 205, 206)" class='category-element text-center table-hover'>
      <%= link_to 'Показать все', product_categories_path, style: !defined?(product_category_id) && 'background: black; color: white;' %>
    </div>
    <% product_categories.each do |category| %>
      <div id="<%= defined?(product_category_id) && category.id == product_category_id && 'current' %>" style="<%= defined?(product_category_id) && category.id == product_category_id && 'background: black; color: white;' %>" class='text-center table-hover category-element' >
        <%= link_to category.name, product_category_path(category) %>
      </div>
    <% end %>
  </div>
</div>


<script>
  document.addEventListener('DOMContentLoaded', (event) => {
    const currentElement = document.getElementById('current');
    if (currentElement) {
      currentElement.scrollIntoView({ behavior: 'smooth', block: 'start' });
    }
  });
</script>
