<%= render 'filter_form', q: @q, url: request.path %>
<div class="container my-5">
  <div class="card shadow-lg">
    <div class="card-header d-flex justify-content-between align-items-center">
      <h3 class="card-title font-weight-bold">Mijozlar</h3>
      <%= link_to 'mijoz q"shish', new_buyer_path, class: "btn btn-warning min-width-btn" %>
      <%= link_to 'Экспорт в Excel', buyers_url(q: params.dig(:q)&.permit!, format: :xlsx), class: 'btn btn-success' %>
    </div>

    <div class="card-body">
      <%= render 'buyers', buyers: @buyers %>
    </div>
    <%= paginate @buyers %>
  </div>
</div>
